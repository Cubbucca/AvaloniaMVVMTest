							<TextBlock Text="Test1"/>
							<TextBlock Text="Test2"/>
							<TextBlock Text="Test3"/>
						</StackPanel>
					</Flyout>
				</Button.ContextFlyout>
			</Button>
			<Button Name="PasswordButton" Command="{Binding AddToListBind}" Content="Add To List Bind" HorizontalAlignment="Center">
