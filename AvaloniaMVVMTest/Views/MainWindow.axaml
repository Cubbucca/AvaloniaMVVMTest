		<Rectangle PointerPressed="DoDrag" Fill="Blue" Height="44" Width="44" Canvas.Left="20" Canvas.Top="20"/>
		<Rectangle PointerPressed="DoDrag" Fill="Green" Height="44" Width="44" Canvas.Left="40" Canvas.Top="40"/>
